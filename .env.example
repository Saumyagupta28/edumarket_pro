# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_API_VERSION=v1

# Application Configuration
VITE_APP_NAME=EduMarket Pro
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Authentication Configuration
VITE_JWT_SECRET=your_jwt_secret_key
VITE_AUTH_COOKIE_NAME=edumarket_auth
VITE_SESSION_TIMEOUT=3600

# Payment Gateway Configuration
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
VITE_STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# AWS Configuration (for file uploads)
VITE_AWS_ACCESS_KEY_ID=your_aws_access_key
VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
VITE_AWS_REGION=us-east-1
VITE_AWS_S3_BUCKET=your_s3_bucket_name

# Video Streaming Configuration
VITE_VIDEO_CDN_URL=https://your_video_cdn.com
VITE_VIDEO_ENCRYPTION_KEY=your_video_encryption_key

# Email Configuration
VITE_EMAIL_SERVICE_API_KEY=your_email_service_api_key
VITE_EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# Social Media Configuration
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_LINKEDIN_CLIENT_ID=your_linkedin_client_id

# Analytics Configuration
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id
VITE_HOTJAR_ID=your_hotjar_id

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_MULTI_LANGUAGE=true

# CDN Configuration
VITE_CDN_BASE_URL=https://cdn.yourdomain.com
VITE_IMAGE_CDN_URL=https://images.yourdomain.com

# Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=3600

# Cache Configuration
VITE_CACHE_DURATION=3600
VITE_STATIC_CACHE_DURATION=2592000